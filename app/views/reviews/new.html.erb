
<div class="container my-5 w-75">
  <div>
    <h1 class="text-center mb-5 border-bottom pb-4">Please give a review to your trip</h1>
    <%= simple_form_for([@booking, @review]) do |f| %>
      <%= f.input :rating, class: "mb-3", collection: (1..5) %>
      <%= f.input :content, class: "mb-3"  %>
      <div class="text-center">
        <%= f.button :submit, class: "btn btn-primary "%>
      </div>
    <% end %>
  </div>
  <div class="text-center mt-5">
    <%#= link_to "Back", booking_path(@booking), class: "btn-booking" %>
  </div>
</div>
