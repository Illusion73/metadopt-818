<Section class="login container my-5 w-50 ">
  <h2 class="mb-5 text-center">Please Login</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, class: "mb-3" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, class: "mb-3" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions my-4">
    <%= f.button :submit, "Log in", class: "btn btn-success text-center w-100" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</Section>
