<h1 class="container text-center my-4 border-bottom pb-4">Visit our metaverses</h1>

<div class="container">
  <div class="grid grid--3-cols grid-margin-bottom">
    <% @metaverses.each do |metaverse| %>
        <%= link_to metaverse_path(metaverse)  do %>
            <div class="card" style="width:100%;">
              <% if metaverse.principal_picture.attached? %>
                <%= cl_image_tag metaverse.principal_picture.key, crop: :fill, class: "card-img-top rounded-top", alt: "principal metaverse picture"  %>
              <% else %>
                <img class="card-img-top rounded-top" src="https://stylistme.com/wp-content/uploads/2022/02/Metaverse-guide-tuto.png" alt="principal metaverse picture">
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= metaverse.title %></h5>
                <p class="card-text"><%= metaverse.price %>â‚¬</p>
              </div>
            </div>
        <% end %>
    <%end%>
  </div>
</div>
