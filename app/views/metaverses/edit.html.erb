<div class="container">
  <h2 class="text-center border-bottom my-4">Update your metaverse</h2>
  <%= simple_form_for(@metaverse) do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price, hint:"Should be in â‚¬"%>
      <%= f.input :category, collection: ["history", "future", "fantasy"]%>
      <%= f.input :pictures, as: :file, input_html: { multiple: true } %>
      <div class="d-flex justify-content-between align-centent-center">
        <div>
        <%= f.button :submit, class: "btn btn-primary my-2"%>
        </div>
        <div>
          <%= link_to "Back to my metaverse", metaverse_path(@metaverse), class: "text-primary border-bottom mt-3" %>
        </div>
      </div>


      <%#= f.button :submit, class: "btn btn-success my-2 w-100"%>
  <% end %>
</div>
