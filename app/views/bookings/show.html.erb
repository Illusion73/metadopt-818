<div class="container">

  <h1>My booking</h1>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @booking.metaverse.principal_picture %>)">
  <%= @booking.metaverse.title %> booked, start the experience !
  </div>


  <p><strong>Booking details</strong></p>
  <ul>
    <li>Arrival : <%= @booking.start_at %></li>
    <li>Departure : <%= @booking.end_at %></li>
    <li><%= @booking.metaverse.description %></li>
  </ul>

  <%= link_to "Edit this booking", edit_metaverse_booking_path([@metaverse, @booking]), class: "btn btn-success" %>
  <br>
  <%= link_to "Delete this booking", booking_path(@booking), method: :delete, class: "btn btn-danger"  %>

</div>
