<div class="container">
  <h1>Book your favorite metaverse for a wonderful experience !</h1>

  <%= current_user.email %>

  <%= simple_form_for([@metaverse, @booking]) do |f| %>
    <%= f.date_field :start_at %>
    <%= f.date_field :end_at %>
    <%= f.button :submit %>
  <% end %>

  <%= link_to "Back", metaverse_path(@metaverse), class: "btn btn-primary" %>
</div>
